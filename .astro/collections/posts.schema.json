{
  "$ref": "#/definitions/posts",
  "definitions": {
    "posts": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "slug": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "coverImage": {
          "type": "string",
          "minLength": 1
        },
        "draft": {
          "type": "boolean"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "updated": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "readingTime": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "canonicalUrl": {
          "type": "string",
          "format": "uri"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": ["title", "date", "slug", "summary", "coverImage"],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
